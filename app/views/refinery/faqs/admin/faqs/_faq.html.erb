<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(faq) -%>">
  <span class='title'>
    <%= faq.question %>
    <% if faq.featured? %><span class='label'><%= t('.featured') %></span><% end %>
    <% if faq.hidden? %><span class='label'><%= t('.hidden') %></span><% end %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), refinery.faqs_faqs_path(:anchor => dom_id(faq)),
        :title => t('.view_live_html'),
        :target => "_blank" %>

    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_faqs_admin_faq_path(faq),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.faqs_admin_faq_path(faq),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => faq.question),
        :method => :delete %>
  </span>
</li>
